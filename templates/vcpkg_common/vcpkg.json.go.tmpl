{{ /* Go Template */ }}
{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "{{.Name}}",
  "description": "These are some defaults but feel free to edit these",
  "features": {
    "main": {
      "description": "Main Dependencies",
      "dependencies": [
        {
          "name": "boost-assert",
          "version>=": "1.88.0"
        },
        {
          "name": "boost-log",
          "version>=": "1.88.0"
        },
        {
          "name": "boost-json",
          "version>=": "1.88.0"
        },
        {
          "name": "boost-format",
          "version>=": "1.88.0"
        },
        {
          "name": "boost-stacktrace",
          "version>=": "1.88.0"
        },
        {
          "name": "boost-container",
          "version>=": "1.88.0"
        },
        {
          "name": "vcpkg-cmake",
          "host": true
        },
        {
          "name": "vcpkg-cmake-config",
          "host": true
        }
      ]
    },
    "test": {
      "description": "Test framework dependencies",
      "dependencies": [
        {
          "name": "boost-test",
          "version>=": "1.88.0"
        }
      ]
    },
    "package-manager-test": {
      "description": "Test to check if package managers are working as expected",
      "dependencies": [
        "zlib",
        {
          "name": "boost-stacktrace",
          "version>=": "1.88.0"
        },
        {
          "name": "vcpkg-cmake",
          "host": true
        },
        {
          "name": "vcpkg-cmake-config",
          "host": true
        }
      ]
    }
  }
}