    {
      "name": "x86-vs-msvc-msr",
      "inherits": "msr-base",
      "displayName": "Build w/ MSVC (x86)(MinSizeRel)",
      "configurePreset": "x86-vs-msvc"
    },
    {
      "name": "vs-msvc-rel-dll",
      "inherits": "rel-base",
      "displayName": "Build w/ MSVC (x64)(Release) DLL",
      "configurePreset": "vs-msvc-dll"
    },
    {
      "name": "x86-vs-msvc-rel-dll",
      "inherits": "rel-base",
      "displayName": "Build w/ MSVC (x86)(Release) DLL",
      "configurePreset": "x86-vs-msvc-dll"
    },
    {
      "name": "x64-gcc-dbg",
      "inherits": "dbg-base",
      "displayName": "Build w/ Ninja and GCC (x64)(Debug)",
      "configurePreset": "x64-gcc-dbg"
