{
  "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "$comment": [
    "You will need CMake version 3.31 or higher in order to use this CMakePresets.json.",
    "For lesser cmake versions, just manually list the variables below into the command line invocation of cmake.",
    "Feel free to edit"
  ],
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}"
    },
    {
      "name": "vcpkg-base",
      "$comment": [
        "TODO: set VCPKG_MANIFEST_INSTALL to FALSE once the package scheduler gets built"
      ],
      "hidden": true,
      "inherits": "base",
      "environment": {
        "VCPKG_ROOT": "$penv{VCPKG_ROOT}"
      },
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_INSTALLED_DIR": "vcpkg_local/${presetName}/vcpkg_installed",
        "VCPKG_MANIFEST_FEATURES": "core-lib;math;tests"
      }
    },
    {
      "name": "||.LName||-base",
      "hidden": true,
      "inherits": "vcpkg-base"
    },
    {
      "name": "vs-msvc",
      "inherits": "||.LName||-base",
      "generator": "Visual Studio 17 2022",
      "displayName": "Visual Studio w/ MSVC (x64)",
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "x64",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      }
    },
    {
      "name": "x86-vs-msvc",
      "inherits": "||.LName||-base",
      "generator": "Visual Studio 17 2022",
      "displayName": "Visual Studio w/ MSVC (x86)",
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "Win32",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "VCPKG_TARGET_TRIPLET": "x86-windows-static-md"
      }
    },
    {
      "name": "vs-msvc-dll",
      "inherits": "||.LName||-base",
      "generator": "Visual Studio 17 2022",
      "displayName": "Visual Studio w/ MSVC (x64) DLL",
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "x64",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "BUILD_SHARED_LIBS": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "x86-vs-msvc-dll",
      "inherits": "||.LName||-base",
      "generator": "Visual Studio 17 2022",
      "displayName": "Visual Studio w/ MSVC (x86) DLL",
      "cacheVariables": {
        "CMAKE_GENERATOR_PLATFORM": "Win32",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "BUILD_SHARED_LIBS": "ON",
        "VCPKG_TARGET_TRIPLET": "x86-windows-static-md"
      }
    },
    {
      "name": "x64-gcc-dbg",
      "inherits": "||.LName||-base",
      "displayName": "Ninja w/ GCC (x64)(Debug)",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-linux-static-md",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x64-linux-static-md.toolchain.cmake"
      }
    },
    {
      "name": "x64-gcc-rel",
      "inherits": "||.LName||-base",
      "displayName": "Ninja w/ GCC (x64)(Release)",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-linux-static-md",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x64-linux-static-md.toolchain.cmake"
      }
    },
    {
      "name": "x64-gcc-dbg-dll",
      "inherits": "||.LName||-base",
      "displayName": "Ninja w/ GCC (x64)(Debug) DLL",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "BUILD_SHARED_LIBS": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-linux-static-md",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x64-linux-static-md.toolchain.cmake"
      }
    },
    {
      "name": "x64-gcc-rel-dll",
      "inherits": "||.LName||-base",
      "displayName": "Ninja w/ GCC (x64)(Release) DLL",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "BUILD_SHARED_LIBS": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-linux-static-md",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x64-linux-static-md.toolchain.cmake"
      }
    },
    {
      "name": "x64-mingw64-dbg",
      "inherits": "||.LName||-base",
      "displayName": "Ninja w/ x86_64-w64-mingw32-g++posix (x64)(Debug)",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-mingw64-static-md",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x64-mingw64-static-md.toolchain.cmake"
      }
    },
    {
      "name": "x64-clang-dbg",
      "inherits": "||.LName||-base",
      "displayName": "Ninja w/ Clang (x64)(Debug)(Check)",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "||.UName||_BUILD_TESTS": "ON",
        "||.UName||_BUILD_EXAMPLES": "ON",
        "VCPKG_TARGET_TRIPLET": "x64-linux-llvm-static-md",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x64-linux-llvm-static-md.toolchain.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dbg-base",
      "hidden": true,
      "jobs": 4,
      "verbose": true,
      "configuration": "Debug"
    },
    {
      "name": "rel-base",
      "hidden": true,
      "jobs": 4,
      "verbose": true,
      "configuration": "Release"
    },
    {
      "name": "msr-base",
      "hidden": true,
      "jobs": 4,
      "verbose": true,
      "configuration": "MinSizeRel"
    },
    {
      "name": "rwdi-base",
      "hidden": true,
      "jobs": 4,
      "verbose": true,
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "vs-msvc-dbg",
      "inherits": "dbg-base",
      "displayName": "Build w/ MSVC (x64)(Debug)",
