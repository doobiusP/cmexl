{
    "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 18,
        "patch": 0
    },
    "include": [
        "linux_base.json"
    ],
    "configurePresets": [
        {
            "name": "mingw-base",
            "hidden": true,
            "inherits": "lbase",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static-dyn-rt",
                "||.UName||_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Werror",
                "||.UName||_C_FLAGS": "-Wall -Wextra -Wpedantic -Werror",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x64-mingw.cmake"
            }
        },
        {
            "name": "mingw-dev",
            "displayName": "x64 MinGW",
            "inherits": [
                "mingw-base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "||.UName||_BUILD_TESTS": "ON",
                "||.UName||_CXX_FLAGS_DEBUG": "-O0 -ggdb3 -fno-omit-frame-pointer --coverage",
                "||.UName||_C_FLAGS_DEBUG": "-O0 -ggdb3 -fno-omit-frame-pointer --coverage",
                "||.UName||_EXE_LINKER_FLAGS_DEBUG": "--coverage",
                "||.UName||_SHARED_LINKER_FLAGS_DEBUG": "--coverage"
            }
        },
        {
            "name": "mingw-rel",
            "displayName": "x64 MinGW Rel",
            "inherits": [
                "mingw-base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "||.UName||_BUILD_TESTS": "ON",
                "||.UName||_CXX_FLAGS_RELEASE": "-ffast-math -flto",
                "||.UName||_C_FLAGS_RELEASE": "-ffast-math -flto",
                "||.UName||_EXE_LINKER_FLAGS_RELEASE": "-flto -s",
                "||.UName||_SHARED_LINKER_FLAGS_RELEASE": "-flto -s"
            }
        },
        {
            "name": "mingw-prof",
            "displayName": "x64 MinGW Prof",
            "inherits": [
                "mingw-base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Profile",
                "||.UName||_BUILD_TESTS": "ON",
                "||.UName||_CXX_FLAGS_PROFILE": "-pg -fno-omit-frame-pointer",
                "||.UName||_C_FLAGS_PROFILE": "-pg -fno-omit-frame-pointer",
                "||.UName||_EXE_LINKER_FLAGS_PROFILE": "-pg",
                "||.UName||_SHARED_LINKER_FLAGS_PROFILE": "-pg"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "mingw-dev",
            "displayName": "x64 MinGW",
            "jobs": 4,
            "configurePreset": "mingw-dev",
            "verbose": true
        },
        {
            "name": "mingw-rel",
            "displayName": "x64 MinGW Rel",
            "jobs": 4,
            "configurePreset": "mingw-rel",
            "verbose": true
        },
        {
            "name": "mingw-prof",
            "displayName": "x64 MinGW Prof",
            "jobs": 4,
            "configurePreset": "mingw-prof",
            "verbose": true
        }
    ],
    "testPresets": [
        {
            "name": "mingw-dev",
            "displayName": "x64 MinGW",
            "configurePreset": "mingw-dev",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "mingw-rel",
            "displayName": "x64 MinGW Rel",
            "configurePreset": "mingw-rel",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "mingw-prof",
            "displayName": "x64 MinGW Prof",
            "configurePreset": "mingw-prof",
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "mingw-dev",
            "displayName": "x64 MinGW",
            "steps": [
                {
                    "type": "configure",
                    "name": "mingw-dev"
                },
                {
                    "type": "build",
                    "name": "mingw-dev"
                },
                {
                    "type": "test",
                    "name": "mingw-dev"
                }
            ]
        },
        {
            "name": "mingw-rel",
            "displayName": "x64 MinGW Rel",
            "steps": [
                {
                    "type": "configure",
                    "name": "mingw-rel"
                },
                {
                    "type": "build",
                    "name": "mingw-rel"
                },
                {
                    "type": "test",
                    "name": "mingw-rel"
                }
            ]
        },
        {
            "name": "mingw-prof",
            "displayName": "x64 MinGW Prof",
            "steps": [
                {
                    "type": "configure",
                    "name": "mingw-prof"
                },
                {
                    "type": "build",
                    "name": "mingw-prof"
                },
                {
                    "type": "test",
                    "name": "mingw-prof"
                }
            ]
        }
    ]
}