{
    "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 18,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "wbase",
            "hidden": true,
            "warnings": {
                "dev": true
            },
            "generator": "Visual Studio 17 2022",
            "environment": {
                "VCPKG_ROOT": "$penv{VCPKG_ROOT}"
            },
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": true,
                "VCPKG_INSTALLED_DIR": "vcpkg_installed/${presetName}/vcpkg_installed",
                "CMAKE_MESSAGE_LOG_LEVEL": "VERBOSE",
                "CMAKE_CXX_FLAGS_INIT": "/W4 /WX /permissive- /Oy- /MP",
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "/Zi /Ob0 /Od /RTC1",
                "CMAKE_EXE_LINKER_FLAGS_INIT": "/DEBUG:FULL /WX /DYNAMICBASE",
                "CMAKE_SHARED_LINKER_FLAGS_INIT": "/DEBUG:FULL /WX /DYNAMICBASE",
                "CMAKE_STATIC_LINKER_FLAGS_INIT": "",
                "CMAKE_MODULE_LINKER_FLAGS_INIT": "/DEBUG:FULL /WX /DYNAMICBASE"
            }
        }
    ]
}