{
    "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 18,
        "patch": 0
    },
    "include": [
        "win_base.json"
    ],
    "configurePresets": [
        {
            "name": "clangcl",
            "displayName": "x64 ClangCL",
            "inherits": "wbase",
            "cacheVariables": {
                "CMAKE_GENERATOR_PLATFORM": "x64",
                "CMAKE_GENERATOR_TOOLSET": "ClangCL",
                "||.UName||_BUILD_TESTS": "ON",
                "||.UName||_CXX_FLAGS": "/W4 /WX /permissive- /MP",
                "||.UName||_C_FLAGS": "/W4 /WX /permissive- /MP",
                "||.UName||_EXE_LINKER_FLAGS": "/WX",
                "||.UName||_SHARED_LINKER_FLAGS": "/WX",
                "||.UName||_CXX_FLAGS_DEBUG": "/Od /Oy- /RTC1",
                "||.UName||_C_FLAGS_DEBUG": "/Od /Oy- /RTC1",
                "||.UName||_CXX_FLAGS_RELEASE": "/fp:fast",
                "||.UName||_C_FLAGS_RELEASE": "/fp:fast",
                "||.UName||_EXE_LINKER_FLAGS_DEBUG": "/DEBUG:FULL",
                "||.UName||_SHARED_LINKER_FLAGS_DEBUG": "/DEBUG:FULL",
                "||.UName||_CXX_FLAGS_PROFILE": "/Oy-",
                "||.UName||_C_FLAGS_PROFILE": "/Oy-",
                "||.UName||_EXE_LINKER_FLAGS_PROFILE": "/DEBUG:FULL",
                "||.UName||_SHARED_LINKER_FLAGS_PROFILE": "/DEBUG:FULL"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "clangcl-dev",
            "displayName": "x64 ClangCL",
            "jobs": 4,
            "configurePreset": "clangcl",
            "configuration": "Debug",
            "verbose": true
        },
        {
            "name": "clangcl-rel",
            "displayName": "x64 ClangCL Rel",
            "jobs": 4,
            "configurePreset": "clangcl",
            "configuration": "Release",
            "verbose": true
        },
        {
            "name": "clangcl-prof",
            "displayName": "x64 ClangCL Prof",
            "jobs": 4,
            "configurePreset": "clangcl",
            "configuration": "Profile",
            "verbose": true
        }
    ],
    "testPresets": [
        {
            "name": "clangcl-dev",
            "displayName": "x64 ClangCL",
            "configurePreset": "clangcl",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "clangcl-rel",
            "displayName": "x64 ClangCL Rel",
            "configurePreset": "clangcl",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "clangcl-prof",
            "displayName": "x64 ClangCL Prof",
            "configurePreset": "clangcl",
            "configuration": "Profile",
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "clangcl-dev",
            "displayName": "x64 ClangCL",
            "steps": [
                {
                    "type": "configure",
                    "name": "clangcl"
                },
                {
                    "type": "build",
                    "name": "clangcl-dev"
                },
                {
                    "type": "test",
                    "name": "clangcl-dev"
                }
            ]
        },
        {
            "name": "clangcl-rel",
            "displayName": "x64 ClangCL Rel",
            "steps": [
                {
                    "type": "configure",
                    "name": "clangcl"
                },
                {
                    "type": "build",
                    "name": "clangcl-rel"
                },
                {
                    "type": "test",
                    "name": "clangcl-rel"
                }
            ]
        },
        {
            "name": "clangcl-prof",
            "displayName": "x64 ClangCL Prof",
            "steps": [
                {
                    "type": "configure",
                    "name": "clangcl"
                },
                {
                    "type": "build",
                    "name": "clangcl-prof"
                },
                {
                    "type": "test",
                    "name": "clangcl-prof"
                }
            ]
        }
    ]
}